<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/third_container"
    android:paddingHorizontal="12dp"
    android:paddingVertical="15dp">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_title"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toTopOf="parent"
        android:text="안녕 나 응애 "
        android:textFontWeight="700"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/verified_icon"
        android:paddingTop="12dp"
        app:layout_constraintStart_toEndOf="@id/profile_title"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/verified_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"/>

    <TextView
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/verified_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:text="1일전"/>

    <ImageView
        android:id="@+id/more_info"
        android:paddingTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_more_horiz_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingBottom="10sp"
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        android:text="어머 제가 있던 테이블이 제일 반응이 좋았나보네요🤭
우짤래미님도 아시겠지만 저도 일반인 몸매 그 이상도 이하도
아니잖아요?! 그런 제가 기꺼이 도전해봤는데 생각보다
괜찮았어요! 오늘 중으로 라이브 리뷰 올라온다고 하니
꼭 봐주세용~!"/>

    <ImageView
        android:id="@+id/favorite_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/comment"
        app:layout_constraintStart_toStartOf="@id/comment"
        android:src="@drawable/baseline_favorite_border_24"
        android:paddingBottom="25dp"/>

    <TextView
        android:layout_marginStart="5sp"
        android:id="@+id/favorite_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/favorite_icon"
        app:layout_constraintTop_toBottomOf="@id/comment"
        android:text="3"/>

    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        app:layout_constraintTop_toBottomOf="@id/comment"
        app:layout_constraintStart_toEndOf="@id/favorite_count"
        android:src="@drawable/outline_chat_bubble_outline_24"/>

    <TextView
        android:layout_marginStart="5sp"
        android:id="@+id/comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/chat_icon"
        app:layout_constraintTop_toBottomOf="@id/comment"
        android:text="3" />

    <ImageView
        android:id="@+id/user_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/favorite_icon"
        app:layout_constraintStart_toStartOf="@id/favorite_icon"
        android:src="@mipmap/secondary_profile_image"/>

    <TextView
        android:layout_marginStart="5dp"
        android:id="@+id/user_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/user_profile_image"
        app:layout_constraintTop_toTopOf="@id/user_profile_image"
        android:text="ㅇㅅㅇ"/>

    <TextView
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/user_title"
        app:layout_constraintTop_toTopOf="@id/user_title"
        android:text="1일전"/>

    <ImageView
        android:id="@+id/user_more_info"
        android:paddingTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/user_title"
        android:src="@drawable/baseline_more_horiz_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/user_comment"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_profile_image"
        app:layout_constraintStart_toEndOf="@id/user_profile_image"
        android:text="오 대박! 라이브 리뷰 오늘 올라온대요? 챙겨봐야겠다"
        />

    <ImageView
        android:id="@+id/user_favorite_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_comment"
        app:layout_constraintStart_toStartOf="@id/user_comment"
        android:src="@drawable/baseline_favorite_border_24"
        android:paddingBottom="25dp"/>

    <TextView
        android:layout_marginLeft="5sp"
        android:id="@+id/user_favorite_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/user_favorite_icon"
        app:layout_constraintTop_toBottomOf="@id/user_comment"
        android:text="5"/>



</androidx.constraintlayout.widget.ConstraintLayout>